@{
    ViewBag.Title = "Registrese";
}

<h2>Registrese</h2>

@Html.ValidationSummary()
<form method="POST">
    <table>
        <tr>
            <td>Nombre</td>
            <td>@Html.TextBox("nombre")</td>
        </tr>
        <tr>
            <td>Correo electrónico</td>
            <td>@Html.TextBox("correo")</td>
        </tr>
        <tr>
            <td>Clave</td>
            <td>@Html.Password("clave")</td>
        </tr>
        <tr>
            <td>Ingrese de nuevo la clave</td>
            <td>@Html.Password("claveRepetida")</td>
        </tr>
    </table>
    <input type="submit" value="Enviar" />
</form>