@using Politecnico.Patrones.ProyectoFinal.Web.Models
@model Politecnico.Patrones.ProyectoFinal.Web.Models.MVAlbumEditar

@{
    ViewBag.Title = "Editar album";
    var listaInterpretes = new MVListaInterpretes
        {
            PadreId = Model.AlbumId,
            ListaInterpretes = Model.ListaInterpretes,
            Editable = true, 
            Controlador = "Albumes", 
            AccionAgregar = "AsociarInterprete",
            AccionesEditar = new List<Tuple<string, string>>
                {
                    new Tuple<string, string>("Desasociar", "DesasociarInterprete")
                }
        };
}

<h2>Editar album</h2>

@if (!string.IsNullOrEmpty(ViewBag.Mensaje)) {
    <span class="advertencia">@ViewBag.Mensaje</span>
}
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Album</legend>

        @Html.HiddenFor(model => model.AlbumId)

        <div class="editor-label">
            @Html.LabelFor(model => model.AlbumNombre)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AlbumNombre)
            @Html.ValidationMessageFor(model => model.AlbumNombre)
        </div>

        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}


@Html.Partial("_Interpretes", listaInterpretes)

<div>
    @Html.ActionLink("Volver al listado", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}