@using Politecnico.Patrones.ProyectoFinal.Web
@model Politecnico.Patrones.ProyectoFinal.Contratos.MV.MVCancion
@{
    var interpretes = Utiles.ResumenInterpretes(Model.Interpretes);
    var interpretesAlbum = Utiles.ResumenInterpretes(Model.InterpretesAlbum);
}

<div>
    @Html.ActionLink(Model.Nombre, "Detalle", "Canciones", new {id = Model.Id}, null) : @Html.DisplayFor(modelItem => Model.TotalVotos)
</div>
<div>
    @if (!string.IsNullOrEmpty(interpretes)) {
        <span class="interprete">@interpretes</span>
    }
    @if (Model.AlbumId != null) {
        <span class="album">
            @Html.ActionLink(Model.Album, "Detalle", "Albumes", new {id = Model.AlbumId}, null) 
            @if (!string.IsNullOrEmpty(interpretesAlbum)) {
                <span class="interprete">@interpretesAlbum</span>
            }
        </span>
    } 
</div>